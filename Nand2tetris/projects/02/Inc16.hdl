/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];
    
    PARTS:
    Not16(in=in, out=notIn);
    And16(a=in, b=notIn, out[1..15]=zero);
    Not16(in[1..15]=zero, out[1] = one);
    Add16(a = in, b[0] = one, b[1..15] = zero, out = out);
}